{
  "author": {
    "email": "steve@kellock.ca",
    "name": "Steve Kellock"
  },
  "build": {
    "appId": "com.example.electron-starter",
    "files": [
      "!src",
      "!docs",
      "!tsconfig.json",
      "!fuse.js",
      "!dev-app-update.yml",
      "!README.md",
      "!LICENSE",
      "!globals.d.ts"
    ],
    "linux": {
      "target": [
        "tar.gz"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "productName": "Electron Starter",
    "publish": {
      "owner": "skellock",
      "provider": "github",
      "repo": "electron-starter"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    }
  },
  "dependencies": {
    "electron-is-dev": "0.2.0",
    "electron-log": "2.2.7",
    "electron-store": "^1.2.0",
    "electron-updater": "2.7.1",
    "mobx": "3.2.1",
    "mobx-react": "4.2.2",
    "mobx-state-tree": "0.9.2",
    "mousetrap": "1.6.1",
    "ramda": "0.24.1",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "rebass": "1.0.0"
  },
  "description": "An electron starter project.",
  "devDependencies": {
    "@types/mousetrap": "1.5.34",
    "@types/react": "15.0.38",
    "@types/react-dom": "15.5.1",
    "ava": "0.21.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-react": "^6.24.1",
    "electron": "1.7.4",
    "electron-ava": "skellock/electron-ava#ava21",
    "electron-builder": "19.16.0",
    "fuse-box": "2.2.0",
    "husky": "0.14.3",
    "lint-staged": "4.0.2",
    "npm-run-all": "4.0.2",
    "npm-scripts-info": "0.3.6",
    "prettier": "1.5.3",
    "react-test-renderer": "^15.6.1",
    "standard": "^10.0.2",
    "ts-node": "^3.2.1",
    "tslint": "5.5.0",
    "typescript": "2.4.2"
  },
  "electron-ava": {
    "babel": {
      "presets": [
        "react"
      ]
    },
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write --no-semi --print-width 100 --single-quote",
      "tslint \"src/**/*.{ts,tsx}\" --fix",
      "git add"
    ],
    "*.js": [
      "prettier --write --no-semi --print-width 100 --single-quote \"*.js\"",
      "standard --fix \"src/**/*.js\"",
      "git add"
    ]
  },
  "main": "out/main.js",
  "name": "electron-starter",
  "private": true,
  "repository": "skellock/electron-starter",
  "scripts": {
    "clean": "rm -rf .fusebox out dist",
    "compile": "NODE_ENV=production node fuse",
    "dist": "electron-builder --mac --win --linux --ia32 --x64",
    "draft": "electron-builder -p always --draft --mac --win --linux --ia32 --x64",
    "info": "npm-scripts-info",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "precommit": "lint-staged",
    "start": "node fuse",
    "test": "npm-run-all test:main test:renderer",
    "test:main": "electron-ava src/main/**/*.test.js",
    "test:renderer": "electron-ava src/renderer/**/*.test.js",
    "test:snapshots": "electron-ava src/renderer/**/*.test.js -u"
  },
  "scripts-info": {
    "clean": "Removes build artifacts and caches.",
    "compile": "Builds both js bundles in production mode.",
    "dist": "Creates a executable for distributing.",
    "draft": "Releases a version as a draft.",
    "info": "Shows available npm scripts.",
    "pack": "Creates a executable for trying out.",
    "postinstall": "Used by electron-builder to build native dependencies.",
    "precommit": "Runs automatically before committing code in git.",
    "start": "Starts the app in dev mode.",
    "test": "Runs tests.",
    "test:main": "Runs the main process tests.",
    "test:renderer": "Runs the renderer process tests.",
    "test:snapshots": "Updates the snapshots."
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "version": "0.10.0"
}